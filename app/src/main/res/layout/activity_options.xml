<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/general_layout_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_notes_mix"
        android:scaleType="centerCrop"
        android:alpha="0.2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="86dp"
                android:text="Options"
                android:textColor="#000000"
                android:textSize="42sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_weight="100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/f_clef"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="50"
                    android:background="@drawable/backgrond_circle"
                    android:padding="15dp"
                    android:src="@drawable/f_clef" />

                <ImageView
                    android:id="@+id/g_clef"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="50"
                    android:background="@drawable/backgrond_circle"
                    android:src="@drawable/g_clef" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="notes amount:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amount_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="30"
                    android:background="@drawable/backgrond_circle"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="#43A047"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amount_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="30"
                    android:background="@drawable/backgrond_circle"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="#FDD835"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amount_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="30"
                    android:background="@drawable/backgrond_circle"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="#FF0000"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/key_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Select Key:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/Key_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000" />

            </LinearLayout>


            <Switch
                android:id="@+id/set_screen_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="Set Screen On"
                android:textColor="#000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/set_night_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="Set Nigth Mode"
                android:textColor="#000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/set_enable_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="Enable Sound"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/notes_range_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="Notes Range:"
                android:textColor="#000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/higt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="10"
                    android:text="high"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/high_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/low_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0"
                    android:text="low"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/low_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textColor="#000" />

            </LinearLayout>

            <Switch
                android:id="@+id/set_enable_temp_on_play_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="Enable Temp Control On Play Screen"
                android:textColor="#000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/seekText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:baselineAligned="false"
                android:text=""
                android:textSize="25sp"
                android:textStyle="italic|bold" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@android:style/Widget.DeviceDefault.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="80dp"
                android:layoutDirection="ltr"
                android:max="100"
                android:progress="30"
                android:progressBackgroundTint="#304225"
                android:thumb="@drawable/quarter_note" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>