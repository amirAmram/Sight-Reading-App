<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_above="@+id/g_key"
        android:textColor="#BEBABA"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="@string/app_name" />

    <RelativeLayout
        android:id="@+id/c1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/d1"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:padding="3dp"
         >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/quarter_note" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="15dp"
            android:background="#000"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/g_key"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="8dp"
        android:src="@drawable/key_0" />

    <ImageView
        android:id="@+id/d1"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/e1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/e1"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/f1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/f1"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/g1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/g1"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/a1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/a1"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/b1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/c2"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/d2"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/d2"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/e2"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/e2"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/f2"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/f2"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/g2"
        android:layout_alignParentLeft="true"
        android:src="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/g2"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/title"
        android:src="@drawable/quarter_note" />


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
       android:layout_centerVertical="true">


    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        />

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@id/line1"/>

    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@id/line2"/>

    <TextView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@id/line3"/>

    <TextView
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        android:layout_marginTop="20dp"
          android:layout_alignTop="@id/line4"/>


        <TextView
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="#000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="110dp"/>

    </RelativeLayout>
</RelativeLayout>